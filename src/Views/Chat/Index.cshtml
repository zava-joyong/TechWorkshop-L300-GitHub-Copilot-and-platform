@model List<ZavaStorefront.Models.ChatMessage>

@{
    ViewData["Title"] = "AI Chat Assistant";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0">
                    <i class="bi bi-robot"></i> AI Chat Assistant
                </h4>
                <form method="post" asp-action="ClearChat" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-light" title="Clear chat history">
                        <i class="bi bi-trash"></i> Clear
                    </button>
                </form>
            </div>
            <div class="card-body" style="height: 500px; overflow-y: auto;" id="chatContainer">
                @if (Model != null && Model.Any())
                {
                    foreach (var message in Model)
                    {
                        if (message.Role == "user")
                        {
                            <div class="d-flex justify-content-end mb-3">
                                <div class="card bg-primary text-white" style="max-width: 75%;">
                                    <div class="card-body py-2 px-3">
                                        <p class="mb-1">@message.Content</p>
                                        <small class="text-white-50">@message.Timestamp.ToString("h:mm tt")</small>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="d-flex justify-content-start mb-3">
                                <div class="card bg-light" style="max-width: 75%;">
                                    <div class="card-body py-2 px-3">
                                        <p class="mb-1">@message.Content</p>
                                        <small class="text-muted">@message.Timestamp.ToString("h:mm tt")</small>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }
                else
                {
                    <div class="text-center text-muted mt-5">
                        <i class="bi bi-chat-dots" style="font-size: 3rem;"></i>
                        <p>No messages yet. Start a conversation!</p>
                    </div>
                }
            </div>
            <div class="card-footer bg-white">
                <form method="post" asp-action="SendMessage" class="d-flex gap-2">
                    <input type="text" 
                           name="userMessage" 
                           class="form-control" 
                           placeholder="Type your message here..." 
                           required 
                           autofocus />
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-send-fill"></i> Send
                    </button>
                </form>
            </div>
        </div>

        <div class="alert alert-info mt-3">
            <i class="bi bi-info-circle"></i>
            <strong>Tip:</strong> This chat assistant is powered by Microsoft Foundry Phi4 AI model. 
            Ask questions about products, shopping, or anything else!
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-scroll to bottom of chat container on page load
        document.addEventListener('DOMContentLoaded', function() {
            var chatContainer = document.getElementById('chatContainer');
            if (chatContainer) {
                chatContainer.scrollTop = chatContainer.scrollHeight;
            }
        });
    </script>
}
